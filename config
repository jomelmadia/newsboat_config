auto-reload yes
always-display-description true
error-log "~/.newsboat/error.log"
notify-always yes
notify-program "notify-send"


# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit


